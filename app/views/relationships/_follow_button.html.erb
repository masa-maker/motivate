<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォロー外す', class: "btn btn-primary btn-lg" %>
    <% end %>
  <% else %>
    <%= form_with(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <%= f.submit 'フォローする', class: "btn btn-primary btn-lg" %>
    <% end %>
  <% end %>
<% end %>